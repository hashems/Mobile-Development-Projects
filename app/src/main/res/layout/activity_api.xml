<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_api"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hashems.project.APIActivity">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/input_prompt" />

        <EditText
            android:id="@+id/input"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt"
            android:inputType="text" />

        <Button
            android:id="@+id/button_submit_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prompt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:background="@color/colorButtonSubmit"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/make_post" />

        <Button
            android:id="@+id/button_get_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_submit_posts"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@color/colorButton"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/get_posts" />

        <ListView
            android:id="@+id/posts_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_get_posts" />

</RelativeLayout>
