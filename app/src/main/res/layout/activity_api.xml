<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_api"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hashems.project.APIActivity">

        <Button
            android:id="@+id/button_submit_posts"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:background="@color/colorButtonSubmit"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/submit_post" />

        <Button
            android:id="@+id/button_get_posts"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@color/colorButton"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/get_posts" />

        <ListView
            android:id="@+id/posts_list"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@+id/button_get_posts" />

        <Button
            android:id="@+id/button_get_circles"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_below="@+id/posts_list"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@color/colorButton"
            android:textColor="@color/colorPrimaryText"
            android:text="Get Circles" />

        <ListView
            android:id="@+id/circles_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/button_get_circles" />

        <EditText
            android:id="@+id/input_circle_name"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circles_list"
            android:hint="Circle Name" />

        <EditText
            android:id="@+id/input_circle_description"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_circle_name"
            android:hint="Circle Description" />

        <TextView
            android:id="@+id/invalid"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_circle_description" />

        <Button
            android:id="@+id/button_update_circle"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:background="@color/colorButtonSubmit"
            android:textColor="@color/colorPrimaryText"
            android:text="Update Circle" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:background="@color/colorButtonLogout"
            android:textColor="@color/colorPrimaryText"
            android:text="Logout" />
</RelativeLayout>
